#include <stdio.h>

// Recursive function to calculate factorial
long long factorial(int n) {
    // Base case: factorial of 0 or 1 is 1
    if (n == 0 || n == 1) {
        printf("  Base case reached: %d! = 1\n", n);
        return 1;
    }

    // Recursive case: n! = n * (n-1)!
    printf("  Calling factorial(%d) = %d x factorial(%d)\n", n, n, n - 1);
    long long result = n * factorial(n - 1);
    printf("  Returning: factorial(%d) = %lld\n", n, result);
    return result;
}

int main() {
    int n;
    char choice;

    printf("========================================\n");
    printf("   FACTORIAL CALCULATOR (Recursion)     \n");
    printf("========================================\n");

    do {
        printf("\nEnter a non-negative integer: ");
        scanf("%d", &n);

        if (n < 0) {
            printf("Error! Factorial not defined for negative numbers.\n");
        } else {
            printf("\n--- Recursive Call Trace ---\n");
            long long result = factorial(n);

            printf("\n-------------------------------\n");
            printf("  Factorial of %d = %lld\n", n, result);
            printf("-------------------------------\n");
        }

        printf("\nCalculate another? (y/n): ");
        scanf(" %c", &choice);

    } while (choice == 'y' || choice == 'Y');

    printf("\nGoodbye!\n");
    return 0;
}
